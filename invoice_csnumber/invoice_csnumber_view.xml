<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="cs_id">
            <field name="name">account.invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form" />
            <field name="arch" type="xml">
                <field name="date_invoice" position="after">
                    <field name="css" />
                    <field name="ntn_num" />
                    <field name="gst_num" />
                    <field name="phone" />
                    <field name="mobile" />
                    <field name="uplink_date" />
                    <!--<field name="custom_account_id"/>-->
                </field>
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="context">"{'show_address':0}"</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="address"/>
                </xpath>
                <xpath expr="//field[@name='fiscal_position']" position="after">
                    <separator string="Reset Account Heads"/><br/>
                    <button name="account_head" string="Reset Heads" type="object" class="oe_highlight" />
                </xpath>
            </field>
        </record>
        <record id="account.invoice_tree_mutual" model="ir.ui.view">
              <field name="name">account.invoice.tree</field>
              <field name="model">account.invoice</field>
              <field name="inherit_id" ref="account.invoice_tree" />
              <field name="code">self.account_head()</field>
              <field name="arch" type="xml">
                  <field name="partner_id" position="after">
                      <field name="css"/>
                  </field>
                  <xpath expr="//field[@name='company_id']" position="after">
                    <field name="journal_id"/>
                    <field name="account_id"/>
                  </xpath>
              </field>
        </record>
        <record  model="ir.ui.view" id="view_account_invoice_filter">
            <field name="name">account.invoice.select</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter" />
            <field name="arch" type="xml">
                <xpath expr="//search/field[@name='number']" position="before">
                    <field name="css"/>
                </xpath>
            </field>
        </record>
         <record  model="ir.ui.view" id="account.view_move">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="attributes">
                    <attribute name="readonly">0</attribute>
                </xpath>
            </field>
        </record>
    </data>
</openerp>