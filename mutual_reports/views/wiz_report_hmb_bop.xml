<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="wiz_report_hmb_bop">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="report.internal_layout">
                <div class="page">
                    <h1>Balance In Bank Accounts</h1><br/>
                    <table class="table table-condensed" style="font-size:16px; width:30%; display:inline-block;">
                        <thead>
                            <tr>
                                <th>Month</th>
                                <th>HMB Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                             <tr t-foreach="doc.cal_bal_hmb()" t-as="l">
                                 <td>
                                     <span t-esc="l['period']"/>
                                 </td>
                                 <td>
                                     <span t-esc="round(l['sum'])"/>
                                 </td>
                             </tr>
                        </tbody>
                    </table>
                    <table class="table table-condensed" style="font-size:16px; width:20%;display:inline-block;">
                        <thead>
                            <tr>
                                <th>BOP Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                             <tr t-foreach="doc.cal_bal_bop()" t-as="l">
                                 <td>
                                     <span t-esc="round(l['sum'])"/>
                                 </td>
                             </tr>
                        </tbody>
                    </table>
                    <table class="table table-condensed" style="font-size:16px; width:14%;display:inline-block;">
                        <thead>
                            <tr>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                             <tr t-foreach="doc.total()" t-as="l">
                                 <td>
                                     <span t-esc="round(l['total'])"/>
                                 </td>
                             </tr>
                        </tbody>
                    </table>
                <br/>
                </div>
            </t>
        </t>
    </t>
</template>
</data>
</openerp>