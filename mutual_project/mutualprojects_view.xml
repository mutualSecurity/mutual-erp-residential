        <record  model="ir.ui.view" id="Issues_log_Search">
            <field name="name">Issues log Search</field>
            <field name="model">tech.activities.issues</field>
            <field name="arch" type="xml">
                <search string="Search Logs">
                    <field name="issue_id"/>
                    <field name="cs_number"/>
                    <field name="technician_name_other" filter_domain="['|',('technician_name_other','ilike',self),('multi_tech_other','ilike',self)]"/>
                    <group string="Custom Filter">
                        <filter string="Create Day" context="{'group_by':'create_date:day'}" help="Create Date"/>
                        <filter string="Create Month" context="{'group_by':'create_date:month'}" help="Create Month"/>
                        <filter string="Create year" context="{'group_by':'create_date:year'}" help="Create Year"/>
                    </group>
                    <group string="TimeIn/TimeOut">
                        <filter string="No TimeIn" domain="[('date_start','=',False)]"/>
                        <filter string="No TimeOut" domain="[('date_end','=',False)]"/>
                        <filter string="No TimeIn/Out" domain="[('date_start','=',False),('date_end','=',False)]"/>
                        <filter string="Both TimeIn/Out" domain="[('date_start','!=',False),('date_end','!=',False)]"/>
                    </group>
                    <group string="TimeIn/Out By Day/Month">
                       <filter string="Today" domain="[('date_start', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00')),('date_start', '&lt;=', datetime.datetime.now().strftime('%Y-%m-%d 23:23:59'))]"/>
                        <filter string="TimeIn By Day" context="{'group_by':'date_start:day'}" />
                        <filter string="TimeIn By Month" context="{'group_by':'date_start:month'}" />
                        <filter string="TimeOut By Day" context="{'group_by':'date_end:day'}" />
                        <filter string="TimeOut By Month" context="{'group_by':'date_end:month'}" />
                    </group>
                </search>
            </field>
        </record>

