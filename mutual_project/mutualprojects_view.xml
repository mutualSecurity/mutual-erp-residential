                  <xpath expr="//field[@name='progress']" position="attributes">
                      <attribute name="invisible">1</attribute>
                  </xpath>
                  <xpath expr="//field[@name='name']" position="before">
                      <field name="id"/>
                      <field name="complaint_reference"/>
