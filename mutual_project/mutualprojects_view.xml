<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- =========================== Issues Logs Begins ================================ -->
        <record id="tech_open_project_attachment_view" model="ir.actions.act_window">
	        <field name="name">Issues Logs</field>
            <field name="res_model">tech.activities.issues</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">click create to add a new record</p>
            </field>
        </record>
        <menuitem
            name="Issues Logs"
            action="tech_open_project_attachment_view"
            id="menu_tech_open_project_attachment_view"
            sequence="20"
            parent="project.menu_project_management">
        </menuitem>
        <record id="tech_activities_form_view" model="ir.ui.view">
            <field name="name">tech_activities.form.view</field>
            <field name="view_type">form</field>
            <field name="model">tech.activities.issues</field>
            <field name="arch" type="xml">
                <form string="tech_activities">
                    <sheet>
                        <group string="Technician Activities">
                            <group>
                                 <field name="technician_name"/>
                                 <field name="tech_name"/>
                                 <field name="total_time"/>
                            </group>
                            <group>
                                 <field name="reason"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- =========================== Issues Logs Ends ================================ -->


        <!-- =========================== Tasks Logs Begins ================================ -->
        <record id="tech_open_project_attachment_task_view" model="ir.actions.act_window">
	        <field name="name">Tasks Logs</field>
            <field name="res_model">tech.activities.tasks</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">click create to add a new record</p>
            </field>
        </record>
        <menuitem
            name="Tasks Logs"
            action="tech_open_project_attachment_task_view"
            id="menu_tech_open_project_attachment_task_view"
            sequence="30"
            parent="project.menu_project_management">
        </menuitem>
        <record id="tech_activities_form_view" model="ir.ui.view">
            <field name="name">tech_activities.form.view</field>
            <field name="view_type">form</field>
            <field name="model">tech.activities.tasks</field>
            <field name="arch" type="xml">
                <form string="tech_activities_tasks">
                    <sheet>
                        <group string="Technician Activities">
                            <group>
                                 <field name="technician_name_tasks"/>
                                 <field name="tech_name_tasks"/>
                                 <field name="total_time_tasks"/>
                            </group>
                            <group>
                                 <field name="reason_tasks"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- =========================== Tasks Logs Ends ================================ -->

        <!--====================================== List of customers showing in project module Begins ==================================-->

        <record id="action_partner_customer_form" model="ir.actions.act_window">
            <field name="name">Customers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{'default_customer':1, 'search_default_customer':1}</field>
            <field name="filter" eval="True"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a contact in your address book.
              </p><p>
                Odoo helps you easily track all activities related to
                a customer: discussions, history of business opportunities,
                documents, etc.
              </p>
            </field>
        </record>

        <menuitem
            name="Customers"
            action="action_partner_customer_form"
            id="menu_action_partner_customer_form"
            sequence="20"
