                    <field name="city_task"/>
                    <field name="monitoring_address_task"/>
                    <field name="mobile_task"/>
                    <field name="phone_task"/>
                </xpath>
                <xpath expr="//field[@name='create_uid']" position="attributes">
                    <attribute name="string">Logged by</attribute>
                </xpath>
                <xpath expr="//field[@name='date_deadline']" position="before">
                    <field name="id"/>
                    <field name="create_date"/>
                    <field name="uplink_date_task"/>
                    <field name="complaint_reference"/>
                    <field name="user_id"/>
                    <!--<field name="task_status"/>-->
                    <!--<field name="status"/>-->
                    <field name="task_status_confirm"/>
                    <field name="disco_reasons" attrs="{'invisible':[('name','!=','disco')]}"/>
                    <field name="system_status" attrs="{'invisible':[('name','!=','disco')]}"/>
                    <field name="removal_address" attrs="{'invisible':[('name','!=','Shifting')]}"/>
                    <field name="survey_address" attrs="{'invisible':[('name','!=','Shifting')]}"/>
                    <field name="print_removal" attrs="{'invisible':[('name','!=','Shifting')]}"/>
                    <field name="print_survey" attrs="{'invisible':[('name','!=','Shifting')]}"/>
                    <!--<field name="timeIn"/>-->
                    <!--<field name="first_signal_time_task"/>-->
                    <!--<field name="timeOut"/>-->
                    <!--<field name="compute_total_time"/>-->
                    <!--<field name="finalstatus"/>-->
                </xpath>
                <xpath expr="//field[@name='task_status_confirm']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='date_deadline']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='categ_ids']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//page[@string='Description']" position="attributes">
                    <attribute name="string">Remarks</attribute>
                </xpath>
                <xpath expr="//page[@string='Extra Info']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='reviewer_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//page[@string='Remarks']" position="before">
                    <page string="Timesheet">
                          <field name="tech_name_tasks" colspan="4" nolabel="1">
                            <tree editable="top" string="Timesheets">
                                <field name="technician_name_other"/>
                                <field name="multi_tech_other" widget="many2many_tags"/>
                                <!--<field name="first_signal"/>-->
                                <field name="date_start"/>
                                <field name="date_end"/>
                                <field name="compute_total_time"/>
                                <field name="reason_tasks" />
                                <field name="create_date" readonly="1"/>
                            </tree>
                          </field>
                    </page>
                </xpath>
                <xpath expr="//page[@string='Remarks']" position="before">
                    <page string="Description">
                          <field name="description_remarks" colspan="4" nolabel="1">
                            <tree editable="bottom" string="description">
                                <field name="remarks"/>
                                <field name="create_uid" readonly="1"/>
                                <field name="create_date" readonly="1"/>
                            </tree>
                          </field>
                    </page>
                </xpath>
                 <xpath expr="//page[@string='Remarks']" position="after">
                    <page string="Reconnection Remarks" attrs="{'invisible':[('name','!=','reconnection')]}">
                        <group><field name="date_of_next_inv" attrs="{'required':[('name','=','reconnection')]}"/>
                        <field name="start_date" attrs="{'required':[('name','=','reconnection')]}"/>
                        <field name="end_date" attrs="{'required':[('name','=','reconnection')]}"/>
                        <field name="m_p" widget="radio" attrs="{'required':[('name','=','reconnection')]}"/>
                        <field name="recon_rem" />
