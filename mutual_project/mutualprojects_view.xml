         <!--==========================Search View of Issues Begins=============================-->
        <record  model="ir.ui.view" id="project_issue.view_project_issue_filter_search">
            <field name="name">Project Issue Tracker Search</field>
            <field name="model">project.issue</field>
            <field name="inherit_id" ref="project_issue.view_project_issue_filter" />
            <field name="arch" type="xml">
                <xpath expr="//search/field[@name='partner_id']" position="before">
                    <field name="cs_number_issue"/>
                    <field name="mobile_issue"/>
                    <field name="phone_issue"/>
                    <field name="monitoring_address_issue"/>
                </xpath>
                <xpath expr="//search/field[@name='partner_id']" position="after">
                    <field name="priority"/>
                    <field name="create_date"/>
                    <field name="user_id_issue"/>
                    <field name="tech_name" />
                </xpath>
                 <search string="Issue Tracker Search">
                     <group string="Complaint Status">
                         <filter string="New" domain="[('stage_id','=','New')]"/>
                         <filter string="Printout Forwarded" domain="[('stage_id','=','Printout Forwarded')]"/>
                         <filter string="Assigned to Technician" domain="[('stage_id','=','Assigned to Technician')]"/>
                         <filter string="In Progress" domain="[('stage_id','=','In Progress')]"/>
                         <filter string="Completed by CMS" domain="[('stage_id','=','Completed by CMS')]"/>
                         <filter string="Resolved" domain="[('stage_id','=','Resolved')]"/>
                         <filter string="Additional" domain="[('additional','=',True)]"/>
                         <filter string="Payment Pending" domain="[('payment','=',True)]"/>
                         <filter string="Payment Received" domain="[('payment_r','=',True)]"/>
                     </group>
                     <group string="By Day Update Stages">
                        <filter name="date_last_stage_update" string="Daily" context="{'group_by':'date_last_stage_update:day'}"/>
                        <filter name="date_last_stage_update" string="Monthly" context="{'group_by':'date_last_stage_update:month'}"/>
                        <filter name="date_last_stage_update" string="Yearly" context="{'group_by':'date_last_stage_update:year'}"/>
                     </group>
                </search>
            </field>
        </record>
